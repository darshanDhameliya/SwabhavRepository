package com.techlab.dip.solution;

public class TaxCalculator {
	private LogType log;
private ILoggable iLoggable;
	
	public TaxCalculator(LogType log) {
		this.log = log;
	}

	public int calculateTax(int amount, int rate) {
		int r = 0;
		try {

			r = amount / rate;
		} catch (Exception e) {
			if (log == LogType.DB) {
				iLoggable=new DbLogger();
				iLoggable.log("storing exception in database");
				return -1;
			}
			if (log == LogType.FILE) {
				iLoggable=new FileLogger();
				iLoggable.log("storing exception in file");
				return -2;
			}
		}
		return r;
	}
}
