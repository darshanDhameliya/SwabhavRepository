package com.techlab.board;

public class Board {
	private Cell[] board;
	private int MAXIMUM_POSITION_BOARD = 9;

	public Board() {
		board = new Cell[9];
		for (Cell cell : board) {
			System.out.println(cell.getCellState().toString());
		}
	}

	public void setBoardCellValue(int position, Mark mark) {
		if (checkBoardCellPosition(position))
			board[position].setCellState(mark);
	}

	public Cell[] getBoardState() {
		return board;
	}

	private boolean checkBoardCellPosition(int position) {
		if (position < MAXIMUM_POSITION_BOARD)
			return true;
		return false;
	}
}
