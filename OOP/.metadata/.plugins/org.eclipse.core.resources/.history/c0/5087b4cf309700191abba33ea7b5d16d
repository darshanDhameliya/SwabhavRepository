package com.techlab.singleton.simple.factory;

public interface IAutoMobileFactory {

	private static IAutoMobileFactory autoMobileFactory;
	private IAutoMobileFactory() {
	}

	public static IAutoMobileFactory getInstance()
	{
		if (autoMobileFactory==null)
			autoMobileFactory=new IAutoMobileFactory();
		return autoMobileFactory;
	}
	public IAutoMobile make(AutoType autoType) {
		if (autoType.equals(AutoType.BMW))
			return new Bmw();
		if (autoType.equals(AutoType.TESLA))
			return new Tesla();
		if (autoType.equals(AutoType.AUDI))
			return new Audi();
		return null;
	}
}
